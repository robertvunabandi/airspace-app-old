        <!--android:text="Sample Text just for now "/>-->
        <RelativeLayout
            android:id="@+id/rlCheckBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_envelope_itr"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="envelopes" />

            <CheckBox
                android:id="@+id/cb_largeBox_itr"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_envelope_itr"
                android:text="large boxes" />

            <CheckBox
                android:id="@+id/cb_smallBox_itr"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cb_envelope_itr"
                android:text="small boxes" />

            <CheckBox
                android:id="@+id/cb_clothing_itr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cb_largeBox_itr"
                android:layout_toRightOf="@+id/cb_largeBox_itr"
                android:text="clothing items" />

            <CheckBox
                android:id="@+id/cb_other_itr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cb_smallBox_itr"
                android:text="others" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_flexibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlCheckBoxes">

            <!-- flexibility drop off -->
            <TextView
                android:id="@+id/tv_dropoff_label_itr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Drop-Off Flexibility" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_dropoff_itr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_dropoff_label_itr">

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_dropoff_itr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/til_dropoff_itr"
                android:hint="Meet me at the airport to pass me the item!"
                android:textSize="14sp" />

            <!-- flexibility pick up -->
            <TextView
                android:id="@+id/tv_pickup_label_itr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_dropoff_itr"
                android:text="Pick-Up Flexibility" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_pickup_itr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_pickup_label_itr">

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_pickup_itr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_pickup_label_itr"
                android:hint="Meet me at the airport to collect the item!"
                android:textSize="14sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_buttons_itr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_flexibility">

            <Button
                android:id="@+id/btn_askQ_itr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT" />

            <Button
                android:id="@+id/btn_request_itr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REQUEST"
                android:layout_toRightOf="@id/btn_askQ_itr"/>

        </RelativeLayout>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/erl_info"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>