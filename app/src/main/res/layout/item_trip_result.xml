        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_dropoff_itr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_dropoff_label_itr"
            android:hint="Meet me at the airport to pass me the item!"
            android:textSize="14sp" />

        <!-- flexibility pick up -->
        <TextView
            android:id="@+id/tv_pickup_label_itr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_dropoff"
            android:text="Pick-Up Flexibility" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pickup_itr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_pickup_label_itr">

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_pickup_itr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_pickup_label_itr"
            android:hint="Meet me at the airport to collect the item!"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_buttons_itr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_pickup_label_itr">

            <Button
                android:id="@+id/btn_request_itr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/btn_askQ_itr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_request_itr"
                android:text="Button" />
        </RelativeLayout>


