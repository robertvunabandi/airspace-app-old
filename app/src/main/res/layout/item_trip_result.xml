<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvName_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Amanda's Trip"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_from_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="SEA"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tv_arrow_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_from_itr"
        android:layout_alignBottom="@+id/tv_from_itr"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tv_from_itr"
        android:layout_toRightOf="@+id/tv_from_itr"
        android:text="➝"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_to_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/tv_arrow_itr"
        android:layout_toRightOf="@+id/tv_arrow_itr"
        android:text="JFK"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tv_fromTime_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_from_itr"
        android:layout_alignStart="@+id/tv_from_itr"
        android:layout_below="@+id/tv_from_itr"
        android:layout_toLeftOf="@+id/tv_arrow_itr"
        android:layout_toStartOf="@+id/tv_arrow_itr"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_toTime_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_to_itr"
        android:layout_alignLeft="@+id/tv_to_itr"
        android:layout_alignRight="@+id/tv_to_itr"
        android:layout_alignStart="@+id/tv_to_itr"
        android:layout_below="@+id/tv_to_itr"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_dateFrom_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_fromTime_itr"
        android:layout_alignLeft="@+id/tv_fromTime_itr"
        android:layout_alignRight="@+id/tv_fromTime_itr"
        android:layout_alignStart="@+id/tv_fromTime_itr"
        android:layout_below="@+id/tv_fromTime_itr"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_dateTo_itr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_toTime_itr"
        android:layout_alignLeft="@+id/tv_toTime_itr"
        android:layout_alignRight="@+id/tv_toTime_itr"
        android:layout_alignStart="@+id/tv_toTime_itr"
        android:layout_below="@+id/tv_toTime_itr"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="12sp" />


    <RelativeLayout
        android:id="@+id/rlChecks"
        android:layout_width="match_parent"
